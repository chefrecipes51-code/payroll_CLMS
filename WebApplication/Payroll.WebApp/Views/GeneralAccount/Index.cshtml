@model IEnumerable<PayrollMasterService.BAL.Requests.AccountingHeadRequest>
<link href="~/assets/src/css/select2.min.css" rel="stylesheet" />
<style>
    #btn1, #btn2, #btn3 {
        display: none !important;
    }
</style>

<div class="breadcrumb-container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <p class="breadcrumb-text"><span class="sprite-icons home-primary"></span></p>
            </li>
            <li class="breadcrumb-item primary">
                <p class="breadcrumb-text">Account</p>
            </li>
            <li class="breadcrumb-item active">
                <p class="breadcrumb-text">Account Head Master</p>
            </li>
        </ol>
    </nav>
</div>
<div class="alert-custom" style="display:none;">    
</div>
<div class="quick-filter-container">
    <div class="btn-group-left">
        <!-- Future: Active/Inactive counts -->
    </div>
    <button class="btn btn_primary btn-add-hide" onclick="window.location.href='/GeneralAccount/AddUpdateAccountMaster'">
        <span class="sprite-icons add-light"></span>
    </button>
</div>

<div class="tab-content">
    <div class="tab-pane fade show active">
        <div class="table-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive table-formula-list">
                        <table id="accounting-head-list" class="table custom-table">
                            <thead>
                                <tr>
                                    <th>Accounting Head</th>
                                    <th>GL Code</th>                                  
                                    <th>Transaction Type</th>
                                    <th>Status</th>
                                    <th class="sticky_cell">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var head in Model)
                                    {
                                        <tr id="row-@head.Accounting_Head_Id">
                                            <td>@head.Accounting_Head_Name</td>
                                            <td>@head.GL_Code</td>                                           
                                            <td>@head.Tran_Type_Name</td>
                                            <td>
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input" disabled type="checkbox" @(head.IsActive ? "checked" : "")>
                                                    <label class="form-check-label">
                                                        @(head.IsActive ? "Active" : "Inactive")
                                                    </label>
                                                </div>
                                            </td>
                                            <td class="sticky_cell">
                                                <div class="table-button-group">
                                                    <button type="button"
                                                            class="redirectFromGeneralAccountList btn btn-primary-light-icon-md btn-edit-hide"
                                                            id="btnEdit"
                                                            data-generalaccountid="@head.Accounting_Head_Id">
                                                        <span class="sprite-icons edit-primary"></span>
                                                    </button>

                                                    <button class="generalAccountDelete btn btn-danger-light-icon btn-delete-hide"
                                                            data-generalaccountid="@head.Accounting_Head_Id"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#deleteAccountingHead">
                                                        <span class="sprite-icons delete-danger"></span>
                                                    </button>

@*                                                     <input type="hidden" id="userPermissionsData" value='@Html.Raw(Json.Serialize(ViewBag.UserPermissions))' />
 *@                                                </div>
                                            </td>

                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade modal-custom modal-primary-confirmation" id="deleteAccountingHead" data-bs-backdrop="static"
     data-bs-keyboard="false" tabindex="-1" aria-labelledby="deleteAccountingHeadLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <p class="md-text-500">Do you want to delete this Accounting Head?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn_primary_outline" data-bs-dismiss="modal">No</button>
                <button type="button" class="btn btn_danger loader-dot-pulse" id="confirmAccountingHeadDelete">Yes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/src/js/select2.min.js"></script>
    <script src="~/devassets/xlsx.full.min.js"></script>
    <script src="~/devassets/jspdf.umd.min.js"></script>
    <script src="~/devassets/jspdf.plugin.autotable.min.js"></script>
    <script src="~/application/js/generalaccount/gaccountlist.js"></script>
}
