@model IEnumerable<Payroll.WebApp.Models.EmployeeViewModel>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Employee List</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <h1>Employee List</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Position</th>
                    <th>Salary</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.Name</td>
                        <td>@employee.Position</td>
                        <td>@employee.Salary.ToString("C")</td>
                        <td><a href="@employee.EncryptedUrl">View Details</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
