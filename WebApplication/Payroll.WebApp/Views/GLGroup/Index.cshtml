@model IEnumerable<PayrollMasterService.BAL.Requests.GlGroupRequest>

<link href="~/assets/src/css/select2.min.css" rel="stylesheet" />
<style>
    #btn1, #btn2, #btn3 {
        display: none !important;
    }
</style>

<div class="breadcrumb-container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <p class="breadcrumb-text"><span class="sprite-icons home-primary"></span></p>
            </li>
            <li class="breadcrumb-item primary">
                <p class="breadcrumb-text">Master</p>
            </li>
            <li class="breadcrumb-item active">
                <p class="breadcrumb-text">GL Group </p>
            </li>
        </ol>
    </nav>
</div>

<div class="alert-custom" style="display:none;"></div>

<div class="quick-filter-container">
    <div class="btn-group-left">
        <!-- Optional filter buttons -->
    </div>
    <button class="btn btn_primary btn-add-hide" onclick="window.location.href='/GLGroup/AddUpdateGLGroup'">
        <span class="sprite-icons add-light"></span>
    </button>
</div>

<div class="tab-content">
    <div class="tab-pane fade show active">
        <div class="table-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="gl-group-list" class="table custom-table">
                            <thead>
                                <tr>
                                    <th>Group Name</th>
                                    <th>Level</th>
                                    <th>Status</th>
                                    @*   <th>Parent Group</th> *@
                                    <th class="sticky_cell">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var group in Model)
                                    {
                                        <tr id="row-@group.GL_Group_Id">
                                            <td>@group.Group_Name</td>
                                            <td>@group.Level</td>
                                            <td>
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input" type="checkbox" disabled @(group.IsActive ? "checked" : "") />
                                                    <label class="form-check-label">
                                                        @(group.IsActive ? "Active" : "Inactive")
                                                    </label>
                                                </div>
                                            </td>

@*                                             <td>@(group.Parent_GL_Group_Id.HasValue ? group.Parent_GL_Group_Id.ToString() : "-")</td>
 *@                                            <td class="sticky_cell">
                                                <div class="table-button-group">
                                                    <!-- EDIT BUTTON: class and data attribute for JS -->
                                                    <button type="button"
                                                            class="redirectFromGLGroupList btn btn-primary-light-icon-md btn-edit-hide"
                                                            data-glgroupid="@group.GL_Group_Id">
                                                        <span class="sprite-icons edit-primary"></span>
                                                    </button>

                                                    <!-- DELETE BUTTON: modal trigger -->
                                                    <button class="glGroupDelete btn btn-danger-light-icon btn-delete-hide"
                                                            data-glgroupid="@group.GL_Group_Id"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#deleteGLGroupModal">
                                                        <span class="sprite-icons delete-danger"></span>
                                                    </button>
                                                </div>
                                            </td>

                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade modal-custom modal-primary-confirmation" id="deleteGLGroupModal" data-bs-backdrop="static"
     data-bs-keyboard="false" tabindex="-1" aria-labelledby="deleteGLGroupModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <p class="md-text-500">Do you want to delete this GL Group?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn_primary_outline" data-bs-dismiss="modal">No</button>
                <button type="button" class="btn btn_danger loader-dot-pulse" id="confirmGLGroupDelete">Yes</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/assets/src/js/select2.min.js"></script>
    <script src="~/application/js/glgroup/glgrouplist.js"></script>
}
