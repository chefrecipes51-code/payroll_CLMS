<script>
    $(document).ready(function () {
            $('#sdate').datepicker({
                format: 'yyyy-mm-dd', // Ensure correct format
                startDate: new Date(), // Disable past dates
                autoclose: true,
                todayHighlight: true
            }).on('changeDate', function (e) {
                $(this).val(e.format('yyyy-mm-dd')); // Set format correctly
                $("#sdate-error").text("").hide(); // Hide error on valid selection

                // Set min date for end date picker based on selected start date
                $('#edate').datepicker('setStartDate', $(this).val());
                $('#edate').val(""); // Clear end date when start date is changed
                 $("#edate-error").text("Please select an end date.").show();
            });

            // Initialize end date picker
            $('#edate').datepicker({
                format: 'yyyy-mm-dd',
                startDate: new Date(), // Disable past dates initially
                autoclose: true,
                todayHighlight: true
            }).on('changeDate', function (e) {
                $(this).val(e.format('yyyy-mm-dd'));
                $("#edate-error").text("").hide();
            });

            // Prevent manual entry of past dates for end date
            $("#edate").on("change", function () {
                let selectedDate = new Date($(this).val());
                let minStartDate = new Date($('#sdate').val());

                if (selectedDate < minStartDate) {
                    $(this).val(""); // Clear input if invalid
                    $("#edate-error").text("End date cannot be before the start date.").show();
                } else {
                    $("#edate-error").text("").hide();
                }
            });

            // Open datepicker on button click
            $(".btn-datepicker").on("click", function () {
                //$("#sdate").datepicker("show");
            $(this).prev("input").datepicker("show"); // Show respective datepicker
            });
    });

</script>