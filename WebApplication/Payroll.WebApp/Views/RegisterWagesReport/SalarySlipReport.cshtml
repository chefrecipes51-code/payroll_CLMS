<div class="modal fade right-align standard-filter-modal drawer" id="standardFilterModal" tabindex="-1"
     data-bs-backdrop="true" tabindex="-1" aria-hidden="true" data-keyword="true">
    <div class="modal-dialog modal-dialog-slideout" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p class="title-primary-md-600">Filter</p>
                <button type="button" class="btn" data-bs-dismiss="modal" aria-label="Close">
                    <span class="sprite-icons close-icon"></span>
                </button>
            </div>
            <div class="modal-body" id="mapEntityGradeContainer">
                <div class="row">
                    <input type="hidden" id="sessionCompanyId" value="@ViewData["SessionCompanyId"]" />

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label for="mapCompanyDropdown" class="form-label">Company<sup>*</sup></label>
                            <div class="mapCompanyDropdown-selection">
                                <select id="mapCompanyDropdown" name="mapCompanyDropdown" data-placeholder="Select company" class="form-control select2_search_ctm" required>
                                </select>
                                <span id="mapCompanyDropdown-error" class="input_error_msg"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label for="mapContractorDropdown" class="form-label">Contractor<sup>*</sup></label>
                            <div class="mapContractorDropdown-selection">
                                <select id="mapContractorDropdown" name="mapContractorDropdown"
                                        data-placeholder="Select contractor"
                                        class="form-control multi-selection" multiple="multiple" style="width: 100%;">
                                </select>
                                <span id="mapContractorDropdown-error" class="input_error_msg"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label for="mapLocationDropdown" class="form-label">Location</label>
                            <div class="mapLocationDropdown-selection">
                                <select id="mapLocationDropdown" name="mapLocationDropdown" data-placeholder="Select location"
                                        class="form-control multi-selection" multiple="multiple" style="width: 100%;">
                                </select>
                                <span id="mapLocationDropdown-error" class="input_error_msg"></span>
                            </div>
                        </div>
                    </div>

