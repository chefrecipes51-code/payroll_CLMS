<link href="~/assets/src/css/select2.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/assets/src/scss/style.css" />
<link rel="stylesheet" href="~/assets/src/css/bootstrap-datepicker.min.css" />

<style>
    #btn1, #btn3 {
        display: none !important;
    }

    .highlighted-component {
        background-color: #e0e0e0 !important;
    }
</style>

<div class="alert-custom" style="display:none;"></div>

<div class="payroll-tabs-content-container">
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-link active" href="/RegisterWagesReport/TaxDeductionReport">Tax Deduction Report</a>
        </div>
    </nav>

    <div class="app-layout">
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-user-list" role="tabpanel">
                <div class="table-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive table-user-list">
                                <table id="taxdeductionreport-list" class="table custom-table">
                                    <thead>
                                        <tr>
                                            <th>Entity Code</th>
                                            <th>Entity Name</th>
                                            <th>Payroll No</th>
                                            <th>Income Tax</th>
                                            <th>Professional Tax</th>
                                            <th>Taxable Income</th>
                                            <th>Total Tax Deductions</th>
                                            <th>Net Taxable Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Data populated via DataTable JS -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filter Modal -->
<div class="modal fade right-align standard-filter-modal drawer" id="standardFilterModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-slideout" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p class="title-primary-md-600">Filter</p>
                <button type="button" class="btn" data-bs-dismiss="modal" aria-label="Close">
                    <span class="sprite-icons close-icon"></span>
                </button>
            </div>
            <div class="modal-body" id="mapEntityGradeContainer">
                <div class="row">
                    <input type="hidden" id="sessionCompanyId" value="@ViewData["SessionCompanyId"]" />

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label for="mapCompanyDropdown" class="form-label">Company<sup>*</sup></label>
                            <select id="mapCompanyDropdown" name="mapCompanyDropdown" class="form-control select2_search_ctm" data-placeholder="Select company" required></select>
                            <span id="mapCompanyDropdown-error" class="input_error_msg"></span>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label for="mapContractorDropdown" class="form-label">Contractor<sup>*</sup></label>
                            <select id="mapContractorDropdown" name="mapContractorDropdown" class="form-control multi-selection" multiple="multiple" data-placeholder="Select contractor" style="width: 100%;"></select>
                            <span id="mapContractorDropdown-error" class="input_error_msg"></span>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label for="mapLocationDropdown" class="form-label">Location</label>
                            <select id="mapLocationDropdown" name="mapLocationDropdown" class="form-control multi-selection" multiple="multiple" data-placeholder="Select location" style="width: 100%;"></select>
                            <span id="mapLocationDropdown-error" class="input_error_msg"></span>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-label">Financial Year Start</label>
                            <div class="date-picker-container">
                                <input type="text" class="form-control datepicker" id="edatef" name="edatef" placeholder="From Date">
                                <button class="btn btn-datepicker">
                                    <span class="sprite-icons2 date-picker"></span>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-label">Month</label>
                            <div class="row g-2">
                                <input type="hidden" id="hiddenMonthId" />
                                <div class="col">
                                    <input type="text" class="form-control" id="monthName" placeholder="Month" readonly />
                                </div>
                                <div class="col">
                                    <input type="text" class="form-control" id="year" placeholder="Year" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <div class="btn_group">
                    <button type="button" class="btn btn-transparent-danger" id="resetFilterBtn">Reset</button>
                    <div class="btn-action-variants">
                        <button class="btn btn_primary_outline_md" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn_primary loader-dot-pulse" id="applyEntityFilterBtn">Apply Filter</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/src/js/select2.min.js"></script>
    <script src="~/assets/src/custom-js/select2.js"></script>
    <script src="~/assets/src/js/bootstrap-datepicker.min.js"></script>
    <script src="~/assets/src/custom-js/datepicker-ctm.js"></script>
    <script src="~/application/js/summaryreports/tdsreport.js"></script>
    <script src="https://cdn.sheetjs.com/xlsx-latest/package/dist/xlsx.full.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.28/jspdf.plugin.autotable.min.js"></script>
}
