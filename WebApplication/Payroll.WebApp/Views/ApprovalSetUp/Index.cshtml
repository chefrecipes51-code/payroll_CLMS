<div class="alert-custom" style="display:none;">
    <!-- use class for different alerts like (alert-success, alert-danger, alert-warning, alert-primary) -->
    <!-- Alert content will be dynamically inserted based on the alert type -->
</div>

<div style="height:30px"></div>
<div id="approvalContainer">

    <div class="vertical-tab-content">

        <div class="form-body">

            <div class="bordered-title-content-wrapper">
                <div class="bordered-title">
                    <p class="title-primary">Approval Matrix Configuration</p>
                </div>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group">
                            <!-- Modules Dropdown -->
                            <label for="moduleSelect" class="form-label">Modules<sup>*</sup></label>
                            <div class="module-selection">
                                <select id="moduleSelect" name="moduleSelect" class="form-control module-select select2_search_ctm" required>
                                    <option value="">-- Select Module --</option>
                                </select>
                                <span id="moduleSelect-error" class="input_error_msg"></span>
                            </div>
                        </div>

                    </div>


                    <div class="col-lg-3">
                        <div class="form-group">
                            <!-- Services Dropdown -->
                            <div class="mb-3">
                                <label for="serviceSelect" class="form-label ">Services<sup>*</sup></label>
                                <select id="serviceSelect" class="form-control service-select select2_search_ctm">
                                    <!-- Services will be populated dynamically -->
                                    <option value="">Select Services</option>
                                </select>
                                <span id="serviceSelect-error" class="input_error_msg"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <div class="mb-3">
                                <label class="form-label"></label>
                                <button type="button" id="getApprovalData" class="btn btn_primary add-button">Get Data</button>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="vertical-tabs-content-fixed-layout form-body">
                    <div id="approvalRows">

                        <div class="row">
                            <!-- This row will be cloned dynamically -->
                            <div style="display:none">
                                <div class="approval-rowHidden row mb-2">

                                    <div class="col-md-2">
                                        <label>Level</label>
                                        <select id="levelSelect" class="form-control level-select">
                                            <option value="">-- Select Level --</option>
                                        </select>
                                    </div>

                                    <div class="col-md-3">
                                        <label for="userSelect">Approver</label>
                                        <select id="userSelect" class="form-control user-select">
                                            <option value="">Select Approver</option>
                                        </select>
                                    </div>

                                    @*    <div class="col-md-2">
                                        <label>Order</label>
                                        <input type="number" class="form-control sequence-order" min="1" style="width:100px">
                                    </div>
                                   <div class="col-md-2 d-flex align-items-end">
                                        <label class="me-2">Is Alternate?</label>
                                        <input type="checkbox" class="is-alternate">
                                    </div> *@
                                    <div class="col-md-3 d-flex align-items-end">
                                        <button type="button" class="btn btn_primary add-button add-more me-2">
                                            <span class="sprite-icons add-light"></span>
                                        </button>

                                        <button type="button" class="btn btn-danger-light-icon remove">
                                            <span class="sprite-icons delete-danger"></span>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div style="height:50px" class="d-flex align-items-center">
                                <div class="form-check me-3">
                                    <input class="form-check-input" type="radio" name="approvalType" id="sequenceApproval" value="sequence" checked>
                                    <label class="form-check-label" for="sequenceApproval">
                                        Sequence Approval
                                    </label>
                                </div>
                               
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="approvalType" id="parallelApproval" value="parallel">
                                    <label class="form-check-label" for="parallelApproval">
                                        Parallel Approval
                                    </label>
                                </div>
                            </div>
                            <div class="approval-row row mb-2">

                                

                            </div>
                        </div>
                    </div>

                    <div class="form-footer">

                        <button type="button" id="submitApprovalSetup" class="btn btn_primary add-button">
                            Submit Approval Setup
                        </button>
                    </div>

                </div>
            </div>
            
        </div>
    </div>
   
    <div class="vertical-tab-content">


        
    </div>
</div>



