    @*   <script src="assets/src/js/select2.min.js"></script>
    <script src="assets/src/custom-js/select2.js"></script> *@
    <script src="assets/src/custom-js/placeholder.js"></script>
    <script src="assets/src/custom-js/treeview.js"></script>

    <script src="~/application/js/approvalmatrix/approvalMatrix.js"></script>

    <script>
        let levelCount = 1;

        function addLevel() {
            levelCount++;
            let approvalMatrix = document.getElementById("approval-matrix");

            // Create a new level section
            let newLevel = document.createElement("div");
            newLevel.classList.add("level-section", "mb-3");
            newLevel.setAttribute("data-level", levelCount);
            newLevel.innerHTML = `
                                            <div class="row align-items-center border p-2 bg-light">
                                                <div class="col-md-3">
                                                    <label class="form-label">Level</label>
                                                    <select class="form-select level-dropdown">
                                                        <option value="${levelCount}">Level ${levelCount}</option>
                                                    </select>
                                                </div>
                                                <div class="col-md-3">
                                                    <label class="form-label">Approval Type</label>
                                                    <select class="form-select">
                                                        <option value="sequence">Sequential</option>
                                                        <option value="parallel">Parallel</option>
                                                    </select>
                                                </div>
                                                <div class="col-md-6 text-end">
                                                    <button class="btn btn-primary me-2" onclick="addLevel()">Add Level</button>
                                                    <button class="btn btn-danger" onclick="removeLevel(this)">Remove Level</button>
                                                </div>
                                            </div>

                                            <div class="approver-section p-3">
                                                <div class="row mb-2 align-items-center approver-row">
                                                        <div class="col-md-1">
                                                </div>
                                                    <div class="col-md-3">
                                                        <label class="form-label">Sequence</label>
                                                        <input type="text" class="form-control" placeholder="Enter Sequence">
                                                    </div>
                                                    <div class="col-md-3">
                                                        <label class="form-label">Approver Name</label>
                                                        <select class="form-select">
                                                            <option value="John">John Doe</option>
                                                            <option value="Jane">Jane Smith</option>
                                                            <option value="Michael">Michael Johnson</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-md-5 text-start">
                                                        <button class="btn btn-success me-2" onclick="addApprover(this)">Add Approver</button>
                                                        <button class="btn btn-warning" onclick="removeApprover(this)">Remove Approver</button>
                                                    </div>
                                                </div>
                                            </div>
                                        `;

            // Append the new level to the approval matrix
            approvalMatrix.appendChild(newLevel);
        }

        function removeLevel(button) {
            let levelSection = button.closest(".level-section");
            if (document.querySelectorAll(".level-section").length > 1) {
                levelSection.remove();
            } else {
                alert("At least one level is required.");
            }
        }

        function addApprover(button) {
            let approverRow = button.closest(".approver-row");
            let newApproverRow = approverRow.cloneNode(true);
            approverRow.closest(".approver-section").appendChild(newApproverRow);
        }

        function removeApprover(button) {
            let approverRow = button.closest(".approver-row");
            if (approverRow.closest(".approver-section").querySelectorAll(".approver-row").length > 1) {
                approverRow.remove();
            } else {
                alert("At least one approver is required.");
            }
        }
    </script>

}
