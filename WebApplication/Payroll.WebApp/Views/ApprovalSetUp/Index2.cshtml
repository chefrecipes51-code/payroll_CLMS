                    <div class="container">
                        <div id="approval-matrix">
                            <!-- Default Level Row -->
                            <div class="level-section mb-3" data-level="1">
                                <div class="row align-items-center border p-2 bg-light">
                                    <div class="col-md-3">
                                        <label class="form-label">Level</label>
                                        <select class="form-select level-dropdown">
                                            <option value="1">Level 1</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label">Approval Type</label>
                                        <select class="form-select">
                                            <option value="sequence">Sequential</option>
                                            <option value="parallel">Parallel</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6 text-end">
                                        <button class="btn btn-primary me-2" onclick="addLevel()">Add Level</button>
                                        <button class="btn btn-danger" onclick="removeLevel(this)">Remove Level</button>
                                    </div>
                                </div>

                                <!-- Approver Section (Subgrid) -->
                                <div class="approver-section p-3">
                                    <div class="row mb-2 align-items-center approver-row">
                                        <div class="col-md-1">
                                        </div>
                                        <div class="col-md-3">
                                            <label class="form-label">Sequence</label>
                                            <input type="text" class="form-control" placeholder="Enter Sequence">
                                        </div>
                                        <div class="col-md-3">
                                            <label class="form-label">Approver Name</label>
                                            <select class="form-select">
                                                <option value="John">John Doe</option>
                                                <option value="Jane">Jane Smith</option>
                                                <option value="Michael">Michael Johnson</option>
                                            </select>
                                        </div>
                                        <div class="col-md-5 text-start">
                                            <button class="btn btn-success me-2" onclick="addApprover(this)">Add Approver</button>
                                            <button class="btn btn-warning" onclick="removeApprover(this)">Remove Approver</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="form-footer">

                        <button type="button" id="submitApprovalSetup" class="btn btn_primary add-button">
                            Submit Approval Setup
                        </button>
                    </div>

                </div>
            </div>

        </div>
    </div>

    <div class="vertical-tab-content">
    </div>
